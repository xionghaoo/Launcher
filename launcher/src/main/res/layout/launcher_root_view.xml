<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <xh.zero.launcher.Desktop
        android:id="@+id/desktop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <xh.zero.launcher.group.GroupPopupView
        android:id="@+id/groupPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/leftDragHandle"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@drawable/new_page"
        android:translationX="-6dp" />

    <View
        android:id="@+id/rightDragHandle"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:alpha="0"
        android:background="@drawable/new_page"
        android:translationX="6dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topDragHandle"
        android:layout_width="@dimen/_80dp"
        android:layout_height="@dimen/_80dp"
        android:padding="@dimen/_10dp"
        android:alpha="0"
        android:src="@drawable/launcher_ic_delete"
        android:background="@drawable/new_page"
        android:layout_gravity="top|center_horizontal"/>

    <xh.zero.launcher.widgets.DeleteOptionView
        android:id="@+id/deleteOptionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</merge>